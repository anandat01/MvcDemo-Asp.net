
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MvcDemo</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <h1 class="page-header">Mvc CRUD Operation</h1>
        </div>
        <div class="row">
            <div class=" col-lg-6 editData">
                <frameset>
                    <legend>Edit Data</legend>
                    <form method="post" action="@Url.Action("savedata", "first")">
                        @foreach (var row in Model)
                        {
                            Session["id"] = @row.id;
                            <span> Name: &nbsp;&nbsp; </span><input type="text" name="name" value="@row.name" autofocus /> <br /><br />
                            <span> Address: </span> <input type="text" name="address" value="@row.address" /> <br /><br />
                            <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span><input type="submit" value="Update" /><br /><br />
                        }
                    </form>
                  </frameset>
            </div>
            <div class="col-lg-6"></div>
            <br />                
        </div>

        <div class="row">
            <div class="col-lg-6">
                <table border="1" style="width:100%">
                    <tr>
                        <th style="text-align:center">Name</th>
                        <th style="text-align:center">Address</th>
                        <th style="text-align:center">Edit</th>
                        <th style="text-align:center">Delete</th>
                    </tr>
                    @{
                        foreach (var row in Model)
                        {
                            <tr>
                                <td style="text-align:center">@row.name</td>
                                <td style="text-align:center">@row.address</td>
                                <td style="text-align:center"><a href="@Url.Action("editdata", "First", new { id = @row.id, name = @row.name, address = @row.address })"><span class="glyphicon glyphicon-pencil pull-right"></span></a></td>
                                <td style="text-align:center"><a href=""><span class="glyphicon glyphicon-remove pull-right"></span></a></td>
                            </tr>
                        }
                    }

                </table>
            </div>
            <div class="col-lg-6"></div>
        </div>
        <br />
        <div class="row">
            <h3><a href="@Url.Action("home", "First")">Back To Home</a></h3></ <br />
        </div>
    </div>


</body>
</html>
