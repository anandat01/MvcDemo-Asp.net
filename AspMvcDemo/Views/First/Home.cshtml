
@{
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MvcDemo</title>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <h1 class="page-header">Mvc CRUD Operation</h1>
        </div>
        <div class="row">
            <h3><a href="@Url.Action("adddata", "First")">Add Data</a></h3></ <br />
        </div>

        <div class="row">
            <div class="col-lg-6">
                <table border="1" style="width:100%">
                    <tr>
                        <th style="text-align:center">Name</th>
                        <th style="text-align:center">Address</th>
                        <th style="text-align:center">Edit</th>
                        <th style="text-align:center">Delete</th>
                    </tr>
                    @{
                        foreach (var row in Model)
                        {
                            <tr>
                                <td style="text-align:center">@row.name</td>
                                <td style="text-align:center">@row.address</td>
                                <td style="text-align:center"><a href="@Url.Action("editdata", "First", new { id = @row.id, name = @row.name, address = @row.address })"><span class="glyphicon glyphicon-pencil pull-right"></span></a></td>
                                <td style="text-align:center"><a href="@Url.Action("deletedata", "First", new { id = @row.id})"><span class="glyphicon glyphicon-remove pull-right"></span></a></td>
                            </tr>
                        }
                    }
                    
                </table>
            </div>
            <div class="col-lg-6"></div>
        </div>
    </div>
    
    
</body>
</html>
